<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gokulkrishnan.helper_kit.Patient"
    android:background="@drawable/ease">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Patient"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:background="#de1414" />

    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Token"
        android:id="@+id/button5"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:background="#f47c0c"
        android:textStyle="bold"
        android:textColor="#1823ee" />

    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Application Form"
        android:id="@+id/button6"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:background="#f47c0c"
        android:textStyle="bold"
        android:textColor="#122caf" />

    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Prescription"
        android:id="@+id/button7"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:background="#f47c0c"
        android:textStyle="bold"
        android:textColor="#1033ce" />

    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Doctor&apos;s Details"
        android:id="@+id/button8"
        android:layout_alignBottom="@+id/button5"
        android:layout_alignParentEnd="true"
        android:background="#f47c0c"
        android:textColor="#1410d4" />

    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Self"
        android:id="@+id/button9"
        android:layout_alignTop="@+id/button6"
        android:layout_alignParentEnd="true"
        android:background="#f47c0c"
        android:textColor="#172cb4" />

    <Button
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:text="Fees"
        android:id="@+id/button10"
        android:layout_alignTop="@+id/button7"
        android:layout_alignParentEnd="true"
        android:background="#f47c0c"
        android:textColor="#1a10a8" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:src="@drawable/nanri"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
